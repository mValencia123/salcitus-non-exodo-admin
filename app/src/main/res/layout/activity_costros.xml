<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/etAgua"
        android:layout_width="299dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:ems="10"
        android:hint="¿Cuanto cuesta el garrafon de agua?"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button2"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/botones"
        android:onClick="Generar"
        android:text="Generar costos"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/etPET"
        android:layout_width="295dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:ems="10"
        android:hint="¿Cual es el precio por kg de PET?"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etAgua"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-56dp"
        android:background="@drawable/botones"
        android:textColor="@android:color/white"
        android:onClick="ayuda"
        android:text="Ayuda" />

    <TextView
        android:id="@+id/txtPET"
        android:layout_width="224dp"
        android:layout_height="58dp"
        android:layout_below="@+id/txtGarrafon"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txtGarrafon"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_below="@+id/txtPET"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="17dp" />
</RelativeLayout>